<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingHorizontal="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bannerImageView2"
        android:layout_width="282dp"
        android:layout_height="246dp"
        app:srcCompat="@drawable/banner_signup"/>

    <ImageView
        android:id="@+id/logoImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/bannerImageView2"
        app:srcCompat="@drawable/logo"

        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingLeft="60dp"
            android:text="Đăng nhập" />

        <EditText
            android:id="@+id/emailSignInEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:ems="10"
            android:hint="Email"
            android:inputType="text"
            android:padding="12dp"
            tools:layout_editor_absoluteX="42dp"
            tools:layout_editor_absoluteY="475dp" />

        <EditText
            android:id="@+id/passwordSignInEditText"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_edit_text"
            android:ems="10"
            android:hint="Mật khẩu"
            android:inputType="text"
            android:padding="12dp" />

<!--        <androidx.appcompat.widget.AppCompatButton-->
<!--            android:id="@+id/button4"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginBottom="10dp"-->
<!--            android:background="@drawable/rounded_button"-->
<!--            android:backgroundTint="@drawable/rounded_button"-->
<!--            android:minWidth="300dp"-->
<!--            android:text="Đăng nhập" />-->

        <Button
            android:id="@+id/signInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng nhập" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="10dp"
            android:text="Quên mật khẩu" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:paddingLeft="60dp"
                android:layout_marginRight="20dp"
                android:text="Đăng nhập với" />
            <ImageView
                android:id="@+id/googleImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/image6"/>

            <ImageView
                android:id="@+id/facebookImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/image7"/>


        </androidx.appcompat.widget.LinearLayoutCompat>


        <TextView
            android:id="@+id/createAccountTextView"
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo tài khoản" />
    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>